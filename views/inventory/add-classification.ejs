
    <h1>Add New Classification</h1>

    
    <div class="flash-message">
      <% if (errors) { %>
        <%= errors() %>
      <% } %>
    </div>
      

 
    <form action="/inv/add-classification" method="POST" onsubmit="return validateClassificationForm()">
        <label for="classificationName">Classification Name:</label>
        <input type="text" id="classificationName" name="classification_name" required pattern="^[A-Za-z]+$">
        <p>Name must be alphabetic characters only</p>
        <button type="submit">Add Classification</button>
    </form>

